<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <AutoCompleteTextView
            android:id="@id/addressEditText"
            style="@style/Widget.AV.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/aet__action_button_size" />

        <ProgressBar
            android:id="@id/progressBar"
            style="@style/Widget.AV.ProgressBar"
            android:layout_width="@dimen/aet__action_button_size"
            android:layout_height="@dimen/aet__action_button_size"
            android:visibility="invisible" />

        <ImageButton
            android:id="@id/useMyLocationButton"
            style="@style/Widget.AV.Button"
            android:layout_width="@dimen/aet__action_button_size"
            android:layout_height="@dimen/aet__action_button_size" />
    </FrameLayout>

</merge>