<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AddressViewWidget" />

    <style name="Internal__AddressViewWidget__Button">
        <item name="android:layout_width">@dimen/aet__action_button_size</item>
        <item name="android:layout_height">@dimen/aet__action_button_size</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">@dimen/aet__vertical_margin_small</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AddressViewWidget.ProgressBar" parent="@style/Internal__AddressViewWidget__Button">
        <item name="android:id">@id/progressBar</item>
        <item name="android:visibility">invisible</item> 
    </style>

    <style name="AddressViewWidget.ButtonBase" parent="@style/Internal__AddressViewWidget__Button">
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:id">@id/useMyLocationButton</item>
        <item name="android:contentDescription">@string/aet__use_current_location</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_device_access_location_found</item>
    </style>
    
    <style name="AddressViewWidget.Button" parent="@style/AddressViewWidget.ButtonBase">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    
    <style name="AddressViewWidget.EditText">
        <item name="android:id">@id/addressEditText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/aet__action_button_size</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:completionThreshold">2</item>
        <item name="android:hint">@string/aet__address_edit_text_hint</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:selectAllOnFocus">true</item>
r    </style>

</resources>